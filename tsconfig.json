{
  "compilerOptions": {
    "outDir": "build",
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true
  },
  "include": [
    "./*.ts",
    "./*.js",
    "src/**/*.ts",
    "test/**/*.ts"
  ],
}
